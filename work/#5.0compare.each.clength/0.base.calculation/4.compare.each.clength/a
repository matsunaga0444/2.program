res

set terminal qt font "Helvetica"

set ylabel 'xi/a_0'
set xlabel 'kBT/t'

#タイトル文字の設定
set title "kBT dependence of coherence length"
#タイトルのフォント設定
set title font"Arial,15"

set xlabel font "Arial,15"
set ylabel font "Arial,15"
#ticsはメモリ文字
set tics font "Arial,15"
#keyは凡例
set key font"Arial,15"
set key left top

# ラベルの位置
set xlabel offset 0,0
set ylabel offset 1,0
#Y軸の余白
set lmargin 8
#X軸の余白
set bmargin 3

set terminal png
set output "graph.png"

plot "xi_1000_real" using 1:2 with points title "xi_{real} N=1000", "N=1000" using 1:2 with points title "xi_{m} N=1000", "q=0.00001" using 1:2 with points title "xi_{N} q=0.00001"