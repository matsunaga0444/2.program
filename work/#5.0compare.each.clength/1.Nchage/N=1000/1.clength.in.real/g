set terminal qt font "Helvetica"

set ylabel 'gap function'
set xlabel 'site'

#タイトル文字の設定
set title "coherence length in real space kBT = delta.dat"
#タイトルのフォント設定
set title font"Arial,15"

set xlabel font "Arial,15"
set ylabel font "Arial,15"
#ticsはメモリ文字
set tics font "Arial,15"
#keyは凡例
set key font"Arial,15"
set key right top

# ラベルの位置
set xlabel offset 0,0
set ylabel offset 1,0
#Y軸の余白
set lmargin 12
#X軸の余白
set bmargin 3

set terminal png
set output "graph.png"

f(x) = a*exp(-1*sqrt(2)*x/b)
fit [12:100] f(x) "delta.dat" u 1:4 via a,b

se xrange[0:300]

set logscale y

plot "delta.dat" using 1:4 with points title "real", f(x) title "fit" ;
