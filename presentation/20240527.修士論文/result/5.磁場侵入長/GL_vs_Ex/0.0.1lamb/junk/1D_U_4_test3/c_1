res

set terminal qt font "Helvetica"

set ylabel 'lambda/a_0'
set xlabel 'kBT/t'

#タイトル文字の設定
set title "kBT dependence of coherence length"
#タイトルのフォント設定
set title font"Arial,15"

set xlabel font "Arial,15"
set ylabel font "Arial,15"
#ticsはメモリ文字
set tics font "Arial,15"
#keyは凡例
set key font"Arial,15"
set key left top

# ラベルの位置
set xlabel offset 0,0
set ylabel offset 1,0
#Y軸の余白
set lmargin 8
#X軸の余白
set bmargin 3

set terminal png
set output "../lamb_1D_U_4_test3.png"

se yrange[0:2]

plot "lamb_Ex_GL_3000" using ($1):($2) with lp title "with Extended GL"\
   ,"lamb_linear_test3" using ($1):($2)/sqrt(2) with points title "with linear response theory test3" 

